  </div>

  <h3>Passengers</h3>
  <%= f.fields_for :passengers do |p| %>
    <div>
      <%= p.label :name %>
      <%= p.text_field :name %>
    </div>
    <div>
      <%= p.label :number %>
      <%= p.telephone_field :number %>
    </div>
